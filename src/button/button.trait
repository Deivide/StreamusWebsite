@mixin-definition raisedButton {
  font-size: 14px;
  padding: 0 16px;
  display: inline-block;
  line-height: 36px;
  text-transform: uppercase;
  border-radius: 2px;
  cursor: pointer;
  font-weight: 500;
  transition: box-shadow .1s cubic-bezier(.39,.575,.565,1);
  min-width: 88px;
  user-select: none;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.14), 0 2px 4px rgba(0, 0, 0, 0.28);

  &.isDisabled {
    trait: disabledButton--light from 'background-color';
    trait: disabledText--light from 'color';
    cursor: default;
    box-shadow: none;
  }

  &:not(.isDisabled) {
    &:hover {
      will-change: box-shadow;
    }

    &:active {
      box-shadow:  0 0 4px rgba(0, 0, 0, 0.14), 0 4px 4px rgba(0, 0, 0, 0.22)
    }
  }
}