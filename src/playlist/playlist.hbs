<streamus-card class='{{styles.loading}}'>
  <card-content>
    Loading playlist...
  </card-content>
</streamus-card>

<streamus-card class='{{styles.error}}'>
  <card-content>
    Failed to load playlist. Sorry. :(
  </card-content>
</streamus-card>

<streamus-card class='{{styles.details}}'>
  <card-header>
    <card-title>
      <h4 data-ui='title' class='{{styles.title}}'></h4>
    </card-title>
    <card-subtitle>
      <div data-ui='displayInfo' class='{{styles.subtitle}}'></div>
    </card-subtitle>
  </card-header>
  <card-content>
    <div data-region='playlistItems'></div>
  </card-content>
  <card-actions>
    <div data-region='button'></div>
  </card-actions>
</streamus-card>